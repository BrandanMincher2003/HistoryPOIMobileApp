<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/data_privacy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data &amp; Privacy"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- Introduction -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your privacy is important to us. This page explains what data HistGeo collects, why we collect it, and how it is securely stored and used to provide the best experience possible."
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="12dp"
            android:justificationMode="inter_word" />

        <!-- What We Collect -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔹 Your email is used for logging in and personalising your experience."
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="8dp"
            android:justificationMode="inter_word" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔹 Your location is used to show nearby historical sites and enhance app features like geofencing and trophies."
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="8dp"
            android:justificationMode="inter_word" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔹 We track visited places, favourites, and achievements for gamification purposes only."
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp"
            android:justificationMode="inter_word" />

        <!-- How It's Stored Securely -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔐 All user data is stored securely in Google Firebase using encrypted connections (SSL/TLS). Personal data is not shared with third parties and is only accessible by the user and app administrators when required for support."
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp"
            android:justificationMode="inter_word" />

        <!-- User Rights -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗑️ You may delete your account or request your data to be removed at any time. Simply contact our support team at 07491681292."
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:justificationMode="inter_word" />
    </LinearLayout>
</ScrollView>
